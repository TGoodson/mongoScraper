<section class="section">
    <div class="container">
      <span class="icon">
        <a href="/"><i class="fa fa-home"></i></a>
      </span>
      <p class="title is-4">{{article.title}}</p>
      <p class="subtitle is-6">
      {{article.body}} 
      <a href={{article.link}}>Source</a>
      </p>
      <div class="columns">
        <div class="field column is-one-quarter">
          <div class="control has-icons-left">
            <input class="input is-primary" type="text" placeholder="Name" id="name">
            <span class="icon is-small is-left">
              <i class="fa fa-user-circle-o"></i>
            </span>
          </div>
        </div>
        <div class="field column is-two-thirds">
          <div class="control has-icons-left">
            <input class="input is-info" type="text" placeholder="Comment" id="body">
            <span class="icon is-small is-left">
              <i class="fa fa-comment"></i>
            </span>
          </div>
        </div>
        <div class="field column">
          <button id="{{article._id}}" class="button is-primary is-outlined submit">
              <span class="icon">
                <i class="fa fa-paper-plane-o"></i>
              </span>
          </button>
        </div>
      </div>
      {{#each article.comment}}
        <article class="message is-info is-small">
          <div class="message-header">
            <p>{{this.name}}</p>
            <button class="delete" aria-label="delete" id="{{this._id}}"></button>
          </div>
          <div class="message-body">
            {{this.body}}
          </div>
        </article>
      {{/each}}
    </div>
</section>
<script src="js/comment.js" type="text/javascript">
</script>